{
    "name": "sweetchuck/lint-report",
    "description": "Generate reports from lint results",
    "license": "GPL-3.0-or-later",
    "config": {
        "bin-dir": "bin",
        "preferred-install": "dist",
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": ">=7.1",
        "ext-dom": "*",
        "ext-json": "*",
        "league/container": "^2.2",
        "symfony/console": "^3.1 || ^4.0",
        "symfony/filesystem": "^3.1 || ^4.0",
        "symfony/yaml": "^3.1 || ^4.0",
        "webmozart/path-util": "^2.3"
    },
    "require-dev": {
        "codeception/codeception": "^2.2",
        "mikey179/vfsStream": "^1.6",
        "squizlabs/php_codesniffer": "^3.4",
        "sweetchuck/git-hooks": "^0.0"
    },
    "autoload": {
        "psr-4": {
            "Sweetchuck\\LintReport\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Sweetchuck\\LintReport\\Test\\Helper\\": "tests/_support/Helper/",
            "Sweetchuck\\LintReport\\Tests\\Unit\\": "tests/unit/"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "@deploy-git-hooks"
        ],
        "post-update-cmd": [
            "@deploy-git-hooks"
        ],
        "lint": [
            "@lint-phpcs-psr2",
            "@lint-composer-lock"
        ],
        "lint-phpcs-psr2": "phpcs --colors",
        "lint-composer-lock": "composer validate",
        "test": [
            "@test-codeception"
        ],
        "test-codeception": "phpdbg -qrr bin/codecept --verbose --coverage --coverage-xml=coverage.xml --coverage-html=html run",
        "deploy-git-hooks": "\\Sweetchuck\\GitHooks\\Composer\\Scripts::deploy",
        "githook-pre-commit": [
            "@lint",
            "@test"
        ]
    }
}
