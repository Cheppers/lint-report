{
    "name": "sweetchuck/lint-report",
    "description": "Generate reports from lint results",
    "license": "GPL-3.0-or-later",
    "keywords": [
        "lint"
    ],
    "authors": [
        {
            "name": "DÃ¡vid Andor",
            "role": "Maintainer",
            "homepage": "https://github.com/Sweetchuck"
        }
    ],
    "homepage": "https://github.com/Sweetchuck/lint-report",
    "support": {
        "source": "https://github.com/Sweetchuck/lint-report",
        "issues": "https://github.com/Sweetchuck/lint-report/issues"
    },
    "config": {
        "bin-dir": "bin",
        "preferred-install": "dist",
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": ">=7.2",
        "ext-dom": "*",
        "ext-json": "*",
        "league/container": "^2.2",
        "symfony/console": "^3.1 || ^4.0",
        "symfony/filesystem": "^3.1 || ^4.0",
        "symfony/yaml": "^3.1 || ^4.0",
        "webmozart/path-util": "^2.3"
    },
    "require-dev": {
        "codeception/codeception": "^4.1",
        "codeception/module-asserts": "^1.1",
        "codeception/module-filesystem": "^1.0",
        "mikey179/vfsstream": "^1.6",
        "squizlabs/php_codesniffer": "^3.4",
        "stecman/symfony-console-completion": "^0.11.0",
        "sweetchuck/codeception-module-robo-task-runner": "^0.7",
        "sweetchuck/git-hooks": "^0.0",
        "sweetchuck/robo-git": "^0.2.0"
    },
    "autoload": {
        "psr-4": {
            "Sweetchuck\\LintReport\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Sweetchuck\\LintReport\\Test\\Helper\\": "tests/_support/Helper/",
            "Sweetchuck\\LintReport\\Tests\\Unit\\": "tests/unit/"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "@git-hooks:deploy"
        ],
        "post-update-cmd": [
            "@git-hooks:deploy"
        ],
        "git-hooks:deploy": "\\Sweetchuck\\GitHooks\\Composer\\Scripts::deploy"
    }
}
